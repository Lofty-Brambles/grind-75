{
    "compilerOptions": {
        "module": "ES2022",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "outDir": "dist",
        "sourceMap": true
    }
}
